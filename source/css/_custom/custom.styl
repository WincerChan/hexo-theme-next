// Custom styles.
// 主页文章添加阴影效果
.site-meta {
    background :#404344;
}

.headband {
    background:#2d2f30;
}

//背景
body { 
    background:url(/images/bj.png);
    background-repeat:repeat-x
}
//側栏
.sidebar-inner{
    background:url(/images/sidebar-bg.png);
    font-family: Microsoft YaHei;
}
.header-inner{
    background:url(/images/sidebar-bg.png);
    font-family: Microsoft YaHei;
}
//字体阴影
body{
    text-shadow: 0px 0px 1px rgba(0,0,0,0.22);
}

//分隔符
.pr{
   height: 25px;
   margin: 20px auto;
   border: 0;
   background: url(/images/pr.png);
   background-repeat: no-repeat;
   background-position:center;
}



//一言
.cost {
  margin-top: 10px;
  padding: 15px 0 0;
  border-bottom: 1px dashed $grey-light;
}

#cost-inner {
  box-sizing: border-box;
  text-align: left;
  /*width: 240px;*/
  font-size: 14.5px;
  margin-top: 18px;
  padding: 20px auto;
  box-shadow: $box-shadow;
  border-radius: $border-radius;
}

//边框阴影
.header-inner {
    box-shadow: 0 2px 7px rgba(0,0,0,0.27);
}

.sidebar-inner {
    box-shadow: 0 2px 7px rgba(0,0,0,0.27);
}

.content-wrap {
    box-shadow: 0 2px 7px rgba(0,0,0,0.27);
}
.post-meta {
    font-family: PT Serif;
}
// disqus comment button
#load-disqus {
    background-color:#FFFFFF;
    color: #333;
    padding:2px 8px 2px 8px;
    margin:0 auto;
    position:relative;
    font-size:15px;
    font-family: 'Alegreya';
    text-decoration:none;
    border: solid 1px #796A6A;
    border-radius: 4px;
    transition-duration: .2s;
    text-shadow: 0 0 1px rgba(0, 0, 0, 0.22);
}

#load-disqus:hover{
    background-color: #808080;
}

.post-comments-count {
    display: none!important;
}
